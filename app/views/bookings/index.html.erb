<div class="wrapper-bookings">
  <div class="container">
    <div class="row">
      <% @bookings.each do |book| %>
      <% yacht = Yacht.find(book.yacht_id) %>
        <div class="col-sm-6">
          <div class="booking">
            <h2><%= yacht.name %></h2>
            <hr>
            <p><%= book.checkin.strftime('%a %B %d %Y') %></p>
            <p><%= book.checkout.strftime('%a %B %d %Y') %></p>
            <p>PRICE = <%= yacht.day_price * ((book.checkout - book.checkin).to_i + 1) %> â‚¬</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
